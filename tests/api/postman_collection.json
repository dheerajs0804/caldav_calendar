              "mode": "raw",
              "raw": "{\n  \"username\": \"dheeraj.sharma@mithi.com\",\n  \"password\": \"{{$randomPassword}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
